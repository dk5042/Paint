<Window
    x:Class="Paint.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Paint"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="mainWindow"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Button x:Name="buttonLoadImage" Grid.Row="1" Content="Wstaw obraz"/>
            <Rectangle x:Name="colorPicker" Grid.Row="0" Height="20" Width="20" Margin="2" Fill="Red" MouseLeftButtonDown="colorPicker_MouseLeftButtonDown" />
        </Grid>

        <Grid Grid.Column="1">
            <Canvas
                Name="paintSurface"
                ClipToBounds="True"
                MouseDown="paintSurface_MouseDown"
                MouseLeftButtonDown="paintSurface_MouseLeftButtonDown"
                MouseMove="paintSurface_MouseMove">
                <Canvas.Background>
                    <SolidColorBrush Opacity="1" Color="White" />
                </Canvas.Background>
            </Canvas>

            <ToolBarPanel>
                <ToolBar VerticalAlignment="Top">
                    <Button x:Name="btnDraw" Click="btnDraw_Click">Rysuj dowolnie</Button>
                    <Button x:Name="btnPoint" Click="btnPoint_Click">Rysuj punkty</Button>
                    <Button x:Name="btnLine" Click="btnLine_Click">Rysuj linie</Button>
                    <Menu>
                        <MenuItem Header="Odcinki">
                            <MenuItem x:Name="drawSegment" Header="Rysuj odcinek" Click="drawSegment_Click" />
                            <MenuItem x:Name="editSegment" Header="Edytuj odcinek" Click="editSegment_Click" />
                        </MenuItem>
                    </Menu>
                    <Menu>
                        <MenuItem Header="Kształty">
                            <MenuItem x:Name="drawRectangle" Header="Prostokąt" Click="drawRectangle_Click" />
                            <MenuItem x:Name="drawPolygon" Header="Wielokąt" Click="drawPolygon_Click" />
                        </MenuItem>
                    </Menu>
                    <Button x:Name="btnLoadImage" Click="btnLoadImage_Click">Wstaw obraz</Button>
                </ToolBar>
            </ToolBarPanel>
        </Grid>
    </Grid>
</Window>
