<Window x:Class="Paint.ColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint"
        mc:Ignorable="d"
        Title="ColorPicker" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Wybierz kolor: " HorizontalAlignment="Left" Margin="240,10,0,0" VerticalAlignment="Top" Grid.Column="1" />
        <TextBox x:Name="tbRValue" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="337,116,0,0" Text="00" TextWrapping="Wrap" />
        <TextBox x:Name="tbGValue" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="337,146,0,0" Text="00" TextWrapping="Wrap" />
        <TextBox x:Name="tbBValue" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="337,176,0,0" Text="00" TextWrapping="Wrap" />
    </Grid>
</Window>
